<% include ./partials/header %>

<section class="createEditSection">
	<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="form">
		<div class="form-group">
			<label for="title">Edit title</label>
			<input id="title" class="form-control" type="text" name="blog[title]" maxlength="40" value="<%- blog.title %>" required>
		</div>
		<div class="form-group">
			<label for="image">Edit the cover image</label>
			<input id="image" class="form-control" type="url" name="blog[image]" value="<%- blog.image %>"  required>
		</div>
		<div class="form-group">
			<label for="desc">Edit the content of the blog</label>
			<textarea id="textArea" class="form-control" name="blog[desc]"> <%- blog.body %> </textarea>
		</div>
		<input class="btn btn-sm btn-primary" type="Submit" name="Submit">
	</form>
</section>

<% include ./partials/footer %>