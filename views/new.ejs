<% include ./partials/header %>

<section class="createEditSection">
	<form action="/blogs" method="POST" class="form">
		<div class="form-group">
			<label for="title">Enter the title</label>
			<input id="title" class="form-control" type="text" name="blog[title]" placeholder="title (40 characters max)" maxlength="40" required>
		</div>
		<div class="form-group">
			<label for="image">Insert the cover image URL</label>
			<input id="image" class="form-control" type="url" name="blog[image]" placeholder="image URL (use format html://...)" required>
		</div>
		<div class="form-group">
			<label for="body">Enter the content of the blog</label>
			<textarea id="textArea" class="form-control" name="blog[body]"></textarea>
		</div>
		<input class="btn btn-sm btn-primary" type="Submit" name="Submit">
	</form>
</section>

<% include ./partials/footer %>